<%- include('../partials/header') %>

<title>Create a Collection</title>
<h1>Create a Collection</h1>

<form id="add-collection" method="POST" action="/collections">
    <table id="recipe-top-info" class="recipe-info">
        <tr>
            <th>Name: </th>
            <td><input type="text" name="name" class="med-input" autocomplete="off"></input><br>
            <st>Make it descriptive!</st><br></td>
        </tr>
        <tr>
            <th>Description: </th>
            <td><textarea name="description" class="long-input" autocomplete="off"></textarea><br>
            <st>Describe why you think this collection of recipes work well, and what your influence is!<st><br></td>
        </tr>
    </table>
    <button id="tags-button" type="submit" class="reg-button">Add Collection Tags</button>
</form>
