<%- include('../partials/header') %>

Name: <%= recipe.name %></td><br>
Description: <%= recipe.description %></td><br>
Category: <%= recipe.category %></td><br>
Tags (separated by comma): <%= recipe.tags %></td><br>
Author: <%= recipe.author %></td><br>

<br>
Prep Time (mins): <%= recipe.prepTime %></td><br>
Cook Time (mins): <%= recipe.cookTime %></td><br>
# Adult Servings: <%= recipe.servings %></td><br>
<br>
<br>
<h2>Ingredients</h2>
<table id="ingredients">
    <thead>
        <tr>
            <th>Qty</th>
            <th>Ingredient</th>
            <th>Preparation</th>
      </tr>
    </thead>
    <tbody>
      <% recipe.ingredients.forEach(function(r) { %>
        <tr>
            <td><%= r.qty %> <%= r.unit %></td>
            <td><%= r.ingredient %></td>
            <td><%= r.preparation %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
<br>
<br>
<h2>Instructions</h2>
<ol id="ingredients">
    <% recipe.instructions.forEach(function(i) { %>
        <li><%= i.instruction %></li>
    <% }); %>

</ol>
<br>
<h3>Add Instructions</h3>
<form action="/recipes/<%= recipe._id %>/instructions?_method=PUT" method="POST" class="Instruction">
    Instruction: <input type="text" name="instruction"></input> 
    <button type="submit">Add Instruction</button>
</form>



<%- include('../partials/footer') %>